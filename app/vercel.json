{
  "rewrites": [
    { "source": "/assets/(.*)", "destination": "/assets/$1" },
    { "source": "/saturn-assets/(.*)", "destination": "/saturn-assets/$1" },
    { "source": "/((?!summer-academy|assets|saturn-assets).*)", "destination": "/summer-academy" }
  ],
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/((?!summer-academy|_next/static|assets|saturn-assets).*)",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "noindex"
        }
      ]
    }
  ],
  "functions": {
    "app/src/routes/summer-academy/**/*": {
      "maxDuration": 10,
      "memory": 1024,
      "includeFiles": "app/src/routes/summer-academy/**/*"
    }
  }
}
